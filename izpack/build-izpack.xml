<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">

  <info>

<appname>MeD's Movie Manager</appname>
<appversion>2.5.3.3</appversion>

<url>http://xmm.sourceforge.net</url>
<javaversion>1.4</javaversion>


</info>


<guiprefs height="300" resizable="yes" width="450"/>


<locale> 
<langpack iso3="eng"/>
</locale>


<panels>
<panel classname="HelloPanel"/>
<panel classname="TargetPanel"/>
<panel classname="InstallPanel"/>
<panel classname="SimpleFinishPanel"/>
</panels>


<packs>
<pack name="MeD's Movie Manager files" required="yes">
  <description>MeD's Movie Manager files</description>
  
  <fileset dir="MovieManager/" targetdir="$INSTALL_PATH">
	<include name="MovieManager.jar" />
	<include name="MovieManager.exe" />
	<include name="Temp.mdb" />
	<include name="log4j.properties" />
	<include name="mapping.xml" />
	<include name="Icon.ico" />
	<include name="castor.properties" />
	<include name="MovieManager.tmx" />
	
	<include name="lib/" />
	<include name="LookAndFeels/" />
	<include name="License/" />
	<include name="reports/" />
  </fileset>
  
  <fileset dir="" targetdir="$INSTALL_PATH">
	<include name="License/"/>
  </fileset>
  </pack>
</packs>


</installation>